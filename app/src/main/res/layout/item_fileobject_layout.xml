<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="40sp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        app:srcCompat="@drawable/ic_folder_black_24dp"
        android:id="@+id/item_fileobj_image" />

    <TextView
            android:text="TextView"
            android:id="@+id/item_fileobj_name"
            style="@style/AppTheme.Item.FileObject.File"/>

    <TextView
            android:text="TextView"
            android:id="@+id/item_fileobj_size"
            style="@style/AppTheme.Item.FileObject.Size"/>
</LinearLayout>