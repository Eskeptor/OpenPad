<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@android:color/transparent"
        android:id="@+id/item_mainfile_image"
        android:scaleType="fitXY"/>

    <TextView
        android:text="TextView"
        android:id="@+id/item_mainfile_title"
        style="@style/AppTheme.Item.TextFile.Title"/>

    <TextView
        android:text="TextView"
        android:id="@+id/item_mainfile_context"
        style="@style/AppTheme.Item.TextFile.Context"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <TextView
        android:text="TextView"
        android:id="@+id/item_mainfile_date"
        style="@style/AppTheme.Item.TextFile.Date"/>

</LinearLayout>