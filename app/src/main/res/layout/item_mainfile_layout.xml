<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_mainfile_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/itemBackgroundColor">

        <ImageView
            android:id="@+id/item_mainfile_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/baseline_delete_forever_white_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_mainfile_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_selector"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_mainfile_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@android:color/transparent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/item_mainfile_title"
                style="@style/AppTheme.Item.TextFile.Title"
                android:text="" />

            <TextView
                android:id="@+id/item_mainfile_context"
                style="@style/AppTheme.Item.TextFile.Context"
                android:text="" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <TextView
                android:id="@+id/item_mainfile_date"
                style="@style/AppTheme.Item.TextFile.Date"
                android:text="" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
