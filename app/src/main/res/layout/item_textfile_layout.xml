<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:id="@+id/item_textfile_title" android:maxLines="1"/>

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/item_textfile_context"
            android:maxLines="1" android:textColor="@color/common_google_signin_btn_text_light_default"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:id="@+id/item_textfile_date"
            android:textColor="@color/common_google_signin_btn_text_light_default"/>
</LinearLayout>