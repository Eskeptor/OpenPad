<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:id="@+id/item_textfile_title"
            style="@style/AppTheme.Item.TextFile.Title"/>

    <TextView
            android:text="TextView"
            android:id="@+id/item_textfile_context"
            style="@style/AppTheme.Item.TextFile.Context"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <TextView
            android:text="TextView"
            android:id="@+id/item_textfile_date"
            style="@style/AppTheme.Item.TextFile.Date"/>
</LinearLayout>